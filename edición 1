                        var listViewItem = new ListViewItem(row);
                        listView1.Items.Add(listViewItem);

                    }
                }
                else
                {
                    Console.WriteLine("No se encontraron datos :'v");
                }
                conectionDatabase.Close();

            }
            catch (Exception ex)
            {
                Nombres.Show(ex.Message);
            }
        } 
